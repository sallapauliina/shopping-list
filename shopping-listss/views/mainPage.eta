<% layout("./layouts/layout.eta") %>

<h1>Shared shopping lists</h1>

<% if (it.lists===true && it.items===true) { %>
    <li> 
        Shopping lists: <%= it.lists.count %>

        Shopping list items: <%= it.items.count %>
    </li>
<%}%>

<% else { %>
    <h2>No shopping lists yet.</h2>
<%}%>

<h2><a href="/lists">Lists</a></h2>